library(ggplot2)
library(tidyr)

# Reshape the data into long format
Destruction_of_Property_Incidents_and_Offenses <- gather(Destruction_of_Property_Incidents_and_Offenses, key = "Incident_Type", value = "Number_of_Incidents", -Time)

# Plot using ggplot
destructionplot <- ggplot(Destruction_of_Property_Incidents_and_Offenses, aes(x = Time, y = Number_of_Incidents, color = Incident_Type, size = Number_of_Incidents)) +
  geom_point() +
  labs(title = "1991-2022 Destruction/Damage/Vandalism of Property Incidents and Offenses",
       x = "Year",
       y = "Number of Incidents and Offenses",
       color = "Incident and Offense Type",
       size = "Offense Intensity") +
  scale_size_continuous(range = c(1, 5), guide = "none") +
  scale_color_manual(values = c("Destruction/Damage/Vandalism of Property Incidents" = "blue", 
                                "Destruction/Damage/Vandalism of Property Offenses" = "green")) +
  theme_minimal() +
  theme(aspect.ratio = 1/1) 

# Print plot
destructionplot
